<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@id/hw_searchview_domain"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/hw_textfield_searchview_normal_left"
        android:singleLine="true"
        android:ellipsize="end"
        android:minEms="3"
        android:maxEms="5"
        android:textSize="16sp"
        android:textColor="@color/hw_primary_text_light"
        android:layout_height="match_parent" />

    <View
        android:id="@id/hw_searchview_divider"
        android:background="@drawable/hw_textfield_searchview_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent" />

    <hwdroid.widget.searchview.SearchEditBox
        android:id="@id/hw_searchview_atext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/hw_ic_search"
        android:drawableStart="@drawable/hw_ic_search"
        android:drawablePadding="8dip"
        android:paddingStart="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@android:string/search_go"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>